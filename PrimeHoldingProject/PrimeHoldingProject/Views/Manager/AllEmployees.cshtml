@using PrimeHoldingProject.Core.Models.Employee;
@using static PrimeHoldingProject.Infrastructure.Constants.RoleConstants;
@model IEnumerable<EmployeeViewModel>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
<link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h2 class="text-center">All Employees</h2>
<hr />

<partial name="_UserMessages" />
<div class="text-center row">
    @foreach (var employee in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">Name: @employee.FullName</h5>
                <p>Email: @employee.EmailAddress</p>
                <p class="mb-0">Phone: @employee.PhoneNumber</p>
                <p class="mb-0">Salary: @employee.Salary</p>
                <p class="mb-0">Date of birth: @employee.BirthDate</p>
                <p class="mb-0">Tasks done: @employee.DoneTasksCount</p>
                <a asp-controller="Manager" asp-action="FireEmployee" asp-route-employeeId="@employee.Id">
                    <input type="submit" value="Fire" class="fs-6 btn btn-warning mb-3 p-2" />
                </a>
            </div>
        </div>
    }
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/all.min.js"></script>
<script src="~/lib/toastr/toastr.min.js"></script>
