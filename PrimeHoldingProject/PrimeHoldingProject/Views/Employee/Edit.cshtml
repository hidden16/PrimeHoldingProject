@using PrimeHoldingProject.Core.Models.User;
@model UserEmployeeViewModel
@{
    ViewData["Title"] = "Edit your information";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.FullName" class="form-label">Full Name</label>
                <input asp-for="@Model.FullName" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EmailAddress" type="text" class="form-label">Email Address</label>
                <input asp-for="@Model.EmailAddress" type="text" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.EmailAddress" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="md-form">
                    <label asp-for="@Model.BirthDate">Date of Birth</label>
                    <input asp-for="@Model.BirthDate" type="date" class="form-control datepicker" value=""
                           min="1940-01-01" max="@DateTime.UtcNow.Year-@DateTime.UtcNow.Month-@DateTime.UtcNow.Day">
                    <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Salary" type="number" class="form-label">Salary (The one you wish to have)</label>
                <input asp-for="@Model.Salary" type="number" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" type="text" class="form-label">Phone Number</label>
                <input asp-for="@Model.PhoneNumber" type="text" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ManagerId">Choose your manager</label>
                <i class="fa-solid fa-caret-down" data-fa-transform="down-32 right-232"></i>
                <select asp-for="@Model.ManagerId" class="form-control">
                    @foreach (var manager in @Model.Managers)
                    {
                            <option value="@manager.ManagerId">@manager.ManagerFirstName @manager.ManagerLastName</option>
                    }
                </select>
                <span asp-validation-for="@Model.ManagerId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-success" type="submit" value="Confirm the changes you made" />
            </div>
        </form>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/js/all.min.js"></script>
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }